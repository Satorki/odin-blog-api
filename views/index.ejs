<!DOCTYPE html>
<html lang="en">
  <%- include("head"); %>
  <body class="container">
    <%- include("header"); %>
    <main class="jumbotron">
      <h1 class="display-4">Welcome to the Odin Blog API</h1>
      <p class="lead">This is an API for a blog.</p>
      <hr class="my-4" />
      <a href="/post/post-add" class="btn btn-primary">Add Post</a>
      <hr class="my-4" />
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <% posts.forEach(function(post) { %>
        <div class="col">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%- post.content %></p>
              <p class="card-text">
                <small class="text-muted">By <%= post.author.name %></small>
              </p>
            </div>
          </div>
        </div>

        <% }) %>
      </div>
    </main>
    <footer><%- include("footer"); %></footer>
  </body>
</html>
